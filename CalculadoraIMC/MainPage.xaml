<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraIMC.MainPage"
             Visual="Material">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Calcula tu IMC" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Frame>
            <StackLayout Padding="40">
                <Entry Placeholder="Altura" HorizontalTextAlignment="Center" Keyboard="Numeric" x:Name="Altura"/>
                <Entry Placeholder="Peso" HorizontalTextAlignment="Center" Keyboard="Numeric" x:Name="Peso"/>
                <Entry Placeholder="IMC" HorizontalTextAlignment="Center" IsEnabled="False" x:Name="IMC"/>
            </StackLayout>
        </Frame>
        <Button Text="Calcular" BackgroundColor="#2196F3" TextColor="White" FontSize="20" CornerRadius="12" HorizontalOptions="Fill" Clicked="Button_Click"/>
    </StackLayout>

</ContentPage>

